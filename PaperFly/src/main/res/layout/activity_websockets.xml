<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".WebSocketTestMainActivity">

    <TextView
        android:id="@+id/laMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/laURL"
        android:layout_marginTop="22dp"
        android:text="Message" />

    <EditText
        android:id="@+id/inURL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:inputType="text"
        android:text="ws://echo.websocket.org:80" />

    <TextView
        android:id="@+id/laURL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/laURL"
        android:layout_alignLeft="@+id/laMessage"
        android:text="URL"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/inMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/laMessage"
        android:layout_centerHorizontal="true"
        android:inputType="text"
        android:text="Hello World" />

    <TextView
        android:id="@+id/laOutput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/inURL"
        android:layout_below="@+id/buGo"
        android:text="Output"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/buGo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/inMessage"
        android:text="Go" />

</RelativeLayout>
